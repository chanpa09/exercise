<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/thebirthdate"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:inputType="date"
        android:text="1989-11-20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtthedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thebirthdate" />

    <Button
        android:id="@+id/birthDatePicker"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="75dp"
        android:text="誕生日"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thebirthdate"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/thedate"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="46dp"
        android:text="特定日"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtthedate"
        app:layout_constraintTop_toBottomOf="@+id/birthDatePicker" />

    <Button
        android:id="@+id/showbio"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="33dp"
        android:text="バイオリズムを見る"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtthedate" />

    <LinearLayout
        android:id="@+id/biolayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showbio"></LinearLayout>
</android.support.constraint.ConstraintLayout>